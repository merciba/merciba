    script(type="text/javascript").
      var scripts = [
        "/scripts/vendor/font-awesome.min.js",
        "/scripts/vendor/jquery-3.1.1.min.js",
        "/scripts/vendor/jquery.mobile-1.5.0-alpha.1.min.js",
